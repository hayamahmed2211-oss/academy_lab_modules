<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <!-- CATEGORY LIST VIEW -->
    <record id="academy_category_list" model="ir.ui.view">
        <field name="name">academy.category.list</field>
        <field name="model">academy.course.category</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="course_count" widget="progressbar" options="{'max_value': 50, 'editable': false}"/>
                <field name="description"/>
            </list>
        </field>
    </record>

    <!-- CATEGORY FORM VIEW -->
    <record id="academy_category_form" model="ir.ui.view">
        <field name="name">academy.category.form</field>
        <field name="model">academy.course.category</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <!-- TEMPORARILY COMMENTED BUTTON BOX -->
                    
                    <div class="oe_button_box" name="button_box">
                        <button class="oe_stat_button" type="action"
                                name="action_view_courses"
                                context="{'search_default_category_id': active_id}"
                                icon="fa-book">
                            <field name="course_count" widget="statinfo" string="Courses"/>
                        </button>
                    </div>
                    
                    
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="description"/>
                        </group>
                        <group>
                            <field name="course_count" readonly="1"/>
                        </group>
                    </group>
                    
                    <field name="course_ids">
                        <list>
                            <field name="name"/>
                            <field name="code"/>
                            <field name="state" widget="badge"/>
                            <field name="enrolled_count"/>
                            <field name="available_seats"/>
                        </list>
                    </field>
                </sheet>
            </form>
        </field>
    </record>

    <!-- CATEGORY SEARCH VIEW - SIMPLIFIED -->
    <record id="academy_category_search" model="ir.ui.view">
        <field name="name">academy.category.search</field>
        <field name="model">academy.course.category</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <!-- Simple filter for categories with courses -->
                <filter string="Has Courses" name="has_courses" domain="[('course_count','>',0)]"/>
            </search>
        </field>
    </record>

    <!-- CATEGORY ACTION -->
    <record id="academy_category_action" model="ir.actions.act_window">
        <field name="name">Categories</field>
        <field name="res_model">academy.course.category</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No categories found. Let's create one!
            </p>
        </field>
    </record>

</odoo>