<odoo>

    <!-- ENROLLMENT LIST -->
    <record id="academy_enrollment_list" model="ir.ui.view">
        <field name="name">academy.enrollment.list</field>
        <field name="model">academy.enrollment</field>
        <field name="arch" type="xml">
            <list>
                <field name="student_id"/>
                <field name="course_id"/>
                <field name="state"/>
                <field name="grade"/>
                <field name="attendance_percentage"/>
                <field name="passed"/>
            </list>
        </field>
    </record>

    <!-- ENROLLMENT FORM -->
    <record id="academy_enrollment_form" model="ir.ui.view">
        <field name="name">academy.enrollment.form</field>
        <field name="model">academy.enrollment</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="action_confirm" type="object"
                            string="Confirm" states="draft"/>
                    <button name="action_complete" type="object"
                            string="Complete" states="confirmed"/>
                    <button name="action_cancel" type="object"
                            string="Cancel" states="draft,confirmed"/>

                    <field name="state" widget="statusbar"
                           statusbar_visible="draft,confirmed,completed,cancelled"/>
                </header>

                <sheet>
                    <group>
                        <field name="student_id"/>
                        <field name="course_id"/>
                        <field name="enrollment_date"/>
                    </group>

                    <group>
                        <field name="grade"/>
                        <field name="attendance_percentage"/>
                        <field name="passed" readonly="1"/>
                    </group>

                    <field name="notes"/>
                </sheet>

                <chatter/>
            </form>
        </field>
    </record>

    <!-- SEARCH -->
    <record id="academy_enrollment_search" model="ir.ui.view">
        <field name="name">academy.enrollment.search</field>
        <field name="model">academy.enrollment</field>
        <field name="arch" type="xml">
            <search>
                <filter string="My Enrollments"
                        domain="[('student_id','=',uid)]"/>
                <filter string="Confirmed"
                        domain="[('state','=','confirmed')]"/>
                <filter string="Completed"
                        domain="[('state','=','completed')]"/>
            </search>
        </field>
    </record>

    <!-- ACTION -->
    <record id="academy_enrollment_action" model="ir.actions.act_window">
        <field name="name">Enrollments</field>
        <field name="res_model">academy.enrollment</field>
        <field name="view_mode">list,form</field>
    </record>

</odoo>
