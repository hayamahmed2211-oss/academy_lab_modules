<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="res_partner_form_academy" model="ir.ui.view">
        <field name="name">res.partner.form.academy</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
            <notebook position="inside">
                <page string="Academy">
                    <group>
                        <field name="is_student"/>
                        <field name="is_instructor"/>
                    </group>
                    
                    <!-- Simple buttons without computed fields -->
                    <div class="oe_button_box" name="button_box">
                        <button class="oe_stat_button" type="object"
                                name="action_view_student_enrollments"
                                icon="fa-book">
                            <div class="o_stat_info">
                                <span class="o_stat_text">View Enrollments</span>
                            </div>
                        </button>
                        <button class="oe_stat_button" type="object"
                                name="action_view_instructor_courses"
                                icon="fa-chalkboard">
                            <div class="o_stat_info">
                                <span class="o_stat_text">View Courses</span>
                            </div>
                        </button>
                    </div>
                </page>
            </notebook>
        </field>
    </record>
</odoo>