<?xml version="1.0" encoding="UTF-8"?>
<odoo>
  
    <!-- LIST VIEW - FIXED FOR ODOO 18 -->
    <record id="academy_course_list" model="ir.ui.view">
        <field name="name">academy.course.list</field>
        <field name="model">academy.course</field>
        <field name="arch" type="xml">
            <list decoration-success="state == 'published'"
                  decoration-warning="is_full"
                  decoration-danger="state == 'cancelled'"
                  decoration-muted="state == 'done'">
                <field name="name"/>
                <field name="code"/>
                <field name="category_id"/>
                <field name="instructor_id"/>
                <field name="start_date"/>
                <field name="end_date"/>
                <field name="enrolled_count"/>
                <field name="available_seats"/>
                <field name="is_full" widget="boolean"/>
                <field name="state" widget="badge"/>
            </list>
        </field>
    </record>

    <!-- FIXED FORM VIEW FOR ODOO 18 -->
    <record id="academy_course_form" model="ir.ui.view">
        <field name="name">academy.course.form</field>
        <field name="model">academy.course</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <!-- STATUSBAR FIRST in Odoo 18 -->
                    <field name="state" widget="statusbar"
                           statusbar_visible="draft,published,in_progress,done,cancelled"
                           statusbar_colors='{"draft": "secondary", "published": "success", "in_progress": "warning", "done": "info", "cancelled": "danger"}'/>
                    
                    <!-- BUTTONS WITH CLASSES - FIXED ATTRS SYNTAX -->
                    <button name="action_publish" type="object"
                            string="Publish"
                            class="oe_highlight"
                            invisible="state != 'draft'"/>
                    
                    <button name="action_start" type="object"
                            string="Start"
                            class="btn-primary"
                            invisible="state != 'published'"/>
                    
                    <button name="action_complete" type="object"
                            string="Complete"
                            class="btn-success"
                            invisible="state != 'in_progress'"/>
                    
                    <button name="action_cancel" type="object"
                            string="Cancel"
                            class="btn-danger"
                            invisible="state in ['done', 'cancelled']"/>
                </header>

                <sheet>
                    <!-- STAT BUTTON BOX - TEMPORARILY COMMENTED -->
                    
                    <div class="oe_button_box" name="button_box">
                        <button class="oe_stat_button" type="action"
                                name="action_view_enrollments"
                                icon="fa-users">
                            <field name="enrolled_count" widget="statinfo" string="Enrolled"/>
                        </button>
                    </div>
                    

                    <group>
                        <group>
                            <field name="name"/>
                            <field name="code"/>
                            <field name="category_id"/>
                            <field name="instructor_id"/>
                        </group>
                        <group>
                            <field name="max_students"/>
                            <field name="enrolled_count" readonly="1"/>
                            <field name="available_seats" readonly="1"/>
                            <field name="is_full" readonly="1"/>
                        </group>
                    </group>

                    <group>
                        <field name="start_date"/>
                        <field name="end_date"/>
                        <field name="duration_hours"/>
                    </group>

                    <notebook>
                        <page string="Description">
                            <field name="description"/>
                        </page>
                        <page string="Enrollments">
                            <field name="enrollment_ids">
                                <list>
                                    <field name="student_id"/>
                                    <field name="state"/>
                                    <field name="grade"/>
                                    <field name="attendance_percentage"/>
                                    <field name="passed" widget="boolean"/>
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>

                <chatter/>
            </form>
        </field>
    </record>

    <!-- SEARCH VIEW - TEMPORARILY COMMENTED -->
    
    <record id="academy_course_search" model="ir.ui.view">
        <field name="name">academy.course.search</field>
        <field name="model">academy.course</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="code"/>
                <field name="state"/>
                <filter string="Published" domain="[('state','=','published')]"/>
                <filter string="Draft" domain="[('state','=','draft')]"/>
                <filter string="In Progress" domain="[('state','=','in_progress')]"/>
                <filter string="Available Seats" domain="[('available_seats','>',0)]"/>
            </search>
        </field>
    </record>
    

    <!-- ACTION -->
    <record id="academy_course_action" model="ir.actions.act_window">
        <field name="name">Courses</field>
        <field name="res_model">academy.course</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No courses found. Let's create one!
            </p>
        </field>
    </record>

</odoo>